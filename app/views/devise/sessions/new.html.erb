<div class="authen__container">
<h2 class="authen__heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "authen__label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "authen__label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class: "authen__label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>