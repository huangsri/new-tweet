<% if current_user %>
  <div class="user__container">
    <p class="user__name">@<%= user.username %></p>
    <div class="user__info">
      <div class="user__info-item">
        <p class="user__info-label">Tweets</p>
        <p class="user__info-number"> <%= user.tweets.count %></p>
      </div>
      <div class="user__info-item">
        <p class="user__info-label">Following</p>
        <p class="user__info-number"> <%= user.tweets.count %></p>
      </div>
      <div class="user__info-item">
        <p class="user__info-label">Followers</p>
        <p class="user__info-number"> <%= user.tweets.count %></p>
      </div>
    </div>
  </div>
<% end %>