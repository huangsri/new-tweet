<%= render 'users/profile', user: @user %>
<% @user.tweets.reverse.each do |tweet| %>
  <% if tweet.retweet_content || tweet.parent && (tweet.content == tweet.parent.content) %>
    <%= render 'tweets/retweet', tweet: tweet %>
  <% else %>
    <%= render 'tweets/tweet', tweet: tweet %>
  <% end %>
<% end %>
